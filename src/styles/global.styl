html,body
  margin: 0;
  padding: 0;
  height: 100%;
  font-family: sans-serif;

:root
  --bold-color: rgba(0, 0, 0, 0.8);
  --nav-background-color: #fefefe;
  --nav-color: #666;
  --workspace-margin-top: 46px;
  --transition-style: all 0.1s ease-in-out;
  --editor-bg: #f5f5f5

*
  box-sizing: border-box;

body
  margin: 0;
  padding: 0;
  font-family: 'Roboto', 'Noto Sans', 'Ubuntu', 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, sans-serif, 'Noto Sans CJK SC', 'Source Han Sans SC',
  'Microsoft Yahei';
  font-size: 14px;
  line-height: 1.6;
  color: var(--bold-color);

#root
  display: flex;
  flex-direction: column;
  height: 100%;

.workspace
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100%;
  &.editor
    background-color: #f5f5f5
  &.editor .content, &.preview .content
    width 100%
    max-width 992px
  &.expand
    .navbar
      left  240px
      transition: all 200ms ease-in-out;
      width calc(100% - 240px)
    .article-list
      margin-left 0
    .ws-content
      transition: all 200ms ease-in-out;
      width calc(100% - 240px)
  

.navbar
  position fixed;
  top 0
  left 0
  width: 100%;
  height 30px
  background-color: transparent;
  color: var(--nav-color);
  display: flex;
  align-items: center;
  font-size 12px
  z-index 2
  .heading-icon
    font-weight 600
  .navbar-wrapper-icon
    cursor pointer
    margin-left: 5px;
    padding: 8px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    position: relative;
    -webkit-transition: var(--transition-style);
    -moz-transition: var(--transition-style);
    transition: var(--transition-style);
    font-size 13px
  .navbar-wrapper-icon:hover,
  .navbar-wrapper-icon.choosen
    cursor: pointer;
    background-color: #eee;

