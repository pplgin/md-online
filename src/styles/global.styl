.article-list
  width: 240px;
  height: 100%;
  margin-left -240px;
  overflow-y: auto;
  height: 100%;
  background: #fafafa;
  transition: all 200ms ease-in-out;
  cursor: default;
  z-index: 1;
  position relative
  display: flex;
  flex-direction: column;
  &:after
    content ''
    position absolute
    width 0 
    border-right 1px solid #ccc;
    height 200%
    top 0
    right 0
    transform scale(0.5)
    transform-origin top right
    

.article-list-hd
  position relative
  height 40px
  .form-table
    width 100%
    height 100%
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: whitesmoke;
    padding 4px 10px
    .form-opt
      flex 1
      input
        border 1px solid #dedede
        padding 4px;
        outline none
        height 100%
        width 100%
        font-size 13px
    .opt-add
      width 40px
      height 40px
      display: flex;
      justify-content: center;
      align-items: center;

.article-list-bd
  flex 1
  overflow-y auto
  ul,li
    list-style none
    padding 0
    margin 0
  ul
    padding 10px 0
    background-color: #FFF
  .list-item
    border-bottom 1px solid #efefef;
    padding 8px 10px
    h4,p
      margin 0
    h4
      font-size 13px
      margin-bottom 8px
    p
      font-size 12px
      color #666
      line-height 22px
  

